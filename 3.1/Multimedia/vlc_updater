    --enable-lirc \
    --enable-libtar \
    --enable-live555 \
    --enable-mad \
    --enable-matroska \
    --enable-merge-ffmpeg \
    --enable-mod \
    --enable-mpc \
    --enable-mpg123 \
    --enable-mtp \
    --enable-ncurses \
    --enable-nfs \
    --enable-notify \
    --enable-ogg \
    --enable-oggspots \
    --enable-opus \
    --enable-png \
    --enable-postproc \
    --enable-projectm \
    --enable-pulse \
    --enable-qt=5 \
    --enable-realrtsp \
    --enable-run-as-root \
    --enable-samplerate \
    --enable-schroedinger \
    --enable-sdl-image \
    --enable-secret \
    --enable-sftp \
    --enable-shout \
    --enable-skins2 \
    --enable-smbclient \
    --enable-soxr \
    --enable-speex \

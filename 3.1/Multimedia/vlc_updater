    --enable-chromecast \
    --enable-dav1d \
    --enable-dc1394 \
    --enable-dca \
    --enable-dv1394 \
    --enable-dvdread \
    --enable-dvbpsi \
    --enable-dvdnav \
    --enable-faad \
    --enable-flac \
    --enable-fontconfig \
    --enable-freetype \
    --enable-fribidi \
    --enable-gme \
    --enable-gnutls \

  CXXFLAGS="$SLKCFLAGS -fpermissive" \
  meson .. \
    --buildtype=release \
    --infodir=/usr/info \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --localstatedir=/var \
    --mandir=/usr/man \
    --prefix=/usr \
    --sysconfdir=/etc \
    -Dopenal=disabled \
    -Dportaudio=disabled \
    -Dsystem_luajit=true \
    -Denable_update_checker=false \
    -Dstrip=true

#!/bin/sh

# Script by www.seguridadwireless.net

SCRIPT_VERSION=20250212

############################################################
## Funciones comunes. Su nombre empieza por f_ ##
############################################################
f_variables(){
	. /opt/wifislax-updaters/Funciones/funciones_updater
}

############################################################
## Funciones propias del script. Su nombre empieza por F_ ##
############################################################
# Definicion de variables
F_variables() {
	PRGNAM=aegisub
	SRCNAM=Aegisub
	EXTENSION=tar.gz
	GESTOR=wget
	echo -ne "\033]2;${PRGNAM}_updater\007"
	WEB=https://github.com/TypesettingTools/$SRCNAM
	VERSION=$(curl -s $WEB/tags|grep $EXTENSION|head -1|cut -d/ -f7|sed 's/v//g'|cut -dt -f-1|sed 's/.$//g')
	SOURCES=v$VERSION.$EXTENSION
	CD=$SRCNAM-$VERSION
	DOWNLOAD=$WEB/archive/refs/tags/$SOURCES
}

# Comprobar dependencias
F_dependencias(){
DEPENDENCIAS="
unifdef
libwpe
wpebackend-fdo
bubblewrap
geoclue2
xdg-dbus-proxy
webkit2gtk
nanosvg
wxWidgets
ffms2
libuchardet"
f_dependencias
}

